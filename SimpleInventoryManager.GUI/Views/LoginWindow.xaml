<Window x:Class="SimpleInventoryManager.GUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Username:" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" Width="200" Height="25" Margin="10,35,0,0" HorizontalAlignment="Left"/>

        <TextBlock Text="Password:" Margin="10,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Width="200" Height="25" Margin="10,95,0,0" HorizontalAlignment="Left"/>

        <Button Content="Login" Width="100" Height="30" Margin="10,130,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="LoginButton_Click"/>
    </Grid>
</Window>